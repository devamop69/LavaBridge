# Proxy configuration
PROXY_HOST=0.0.0.0          # Network interface to bind (0.0.0.0 for all)
PROXY_PORT=2345             # TCP port for Lavalink clients
WEB_PORT=2346               # HTTP port for web interface
PROXY_PASSWORD=DevamOP      # Authentication password

# Backend server configuration
LAVALINK_V3_HOST=127.0.0.1  # Lavalink v3 hostname/IP
LAVALINK_V3_PORT=8806       # Lavalink v3 port

LAVALINK_V4_HOST=127.0.0.1  # Lavalink v4 hostname/IP
LAVALINK_V4_PORT=8807       # Lavalink v4 port

# Data storage configuration
DATABASE_DIR=./database     # Database directory
CONNECTION_DB=connections.json      # Active connections
IP_USAGE_DB=ip_usage.json           # IP usage statistics
BACKEND_STATUS_DB=backend_status.json  # Backend server status
SECURITY_LOG_DB=security_log.json      # Security events
IP_BLACKLIST_DB=ip_blacklist.json      # IP blacklist

# Rate tracking configuration
RATE_TRACKING_INTERVAL=5000   # Rate calculation interval (ms)
RATE_HISTORY_LENGTH=12        # History entries to keep

# Logging configuration
LOG_DIR=./logs              # Log directory
LOG_LEVEL=info              # General log level (info, warn, error, debug)
SECURITY_LOG_LEVEL=debug    # Security log level
MAX_LOG_FILES=30            # Max log files before rotation
MAX_LOG_SIZE=10             # Max log size in MB
ROTATE_LOGS_DAILY=true      # Daily log rotation
FORMAT_TIMESTAMPS=true      # Format log timestamps

# Health check configuration
HEALTH_CHECK_INTERVAL=60000   # Health check interval (ms)
HEALTH_CHECK_TIMEOUT=3000     # Health check timeout (ms)

# Security configuration
MAX_CONNECTIONS_PER_IP=10     # Max connections per IP
MAX_CONNECTIONS_TOTAL=100     # Max total connections
CONNECTION_RATE_LIMIT=5       # New connections per second per IP
RATE_WINDOW_MS=10000          # Rate limiting window (ms)
AUTO_BLACKLIST=false          # Auto-blacklist violators (false for manual only)
BLACKLIST_THRESHOLD=5         # Violations before blacklisting (if auto enabled)
BLACKLIST_DURATION=86400      # Blacklist duration in seconds (24h default)
TRACK_USER_AGENTS=true        # Track user agents
BLOCK_UNKNOWN_USER_AGENTS=false  # Block connections with no user agent
LOG_FULL_HEADERS=false        # Log complete HTTP headers (security risk)
SUSPICIOUS_DATA_RATE=10       # Suspicious data rate threshold (MB/s)
SECURITY_PASSWORD=AdminSecure123  # Password for accessing security dashboard

# Add these advanced security options if needed
#IP_GEOLOCATION_CHECK=false    # Enable IP geolocation verification
#ALLOWED_COUNTRIES=US,CA,GB    # Comma-separated allowed country codes
#WHITELIST_IPS=127.0.0.1       # Comma-separated IPs to always allow
#PROXY_DETECTION=false         # Detect and block proxy/VPN connections
#CONNECTION_TIMEOUT=300000     # Idle connection timeout (ms) 